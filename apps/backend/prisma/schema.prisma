datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id                  String                 @id @default(uuid())
  email               String                 @unique
  emailVerified       Boolean                @default(false)
  passwordHash        String?
  firstName           String?
  lastName            String?
  googleId            String?                @unique
  credits             Int                    @default(0)
  freeEditsUsedAt     DateTime?
  createdAt           DateTime               @default(now())
  updatedAt           DateTime               @updatedAt
  role                UserRole               @default(USER)
  purchases           Purchase[]
  usageEvents         UsageEvent[]
  verificationTokens  VerificationToken[]
  passwordResetTokens PasswordResetToken[]
  auditLogs           AuditLog[]           @relation("audit_actor")
  apiKeys             ApiKey[]
}

model Purchase {
  id              String   @id @default(uuid())
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId          String
  packageType     PackageType
  creditsPurchased Int
  amountCents     Int
  currency        String   @default("USD")
  stripeSessionId String?  @unique
  status          PurchaseStatus
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

enum PackageType {
  PACK_25
  PACK_50
  PACK_100
}

enum PurchaseStatus {
  PENDING
  COMPLETED
  CANCELED
  DISABLED
}

model UsageEvent {
  id          String         @id @default(uuid())
  user        User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId      String
  type        UsageType
  mode        UsageMode       @default(ALGORITHM)
  creditsUsed Int
  isFreeCredit Boolean      @default(false)
  createdAt   DateTime      @default(now())
}

enum UsageType {
  ENCODE
  DECODE
}

enum UsageMode {
  ALGORITHM
  AI
}

enum UserRole {
  USER
  ADMIN
}

model VerificationToken {
  id        String   @id @default(uuid())
  token     String   @unique
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    String
  expiresAt DateTime
  createdAt DateTime @default(now())
}

model PasswordResetToken {
  id        String   @id @default(uuid())
  token     String   @unique
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    String
  expiresAt DateTime
  createdAt DateTime @default(now())
}

model AuditLog {
  id        String   @id @default(uuid())
  actorId   String?
  actor     User?    @relation("audit_actor", fields: [actorId], references: [id])
  action    String
  metadata  Json
  createdAt DateTime @default(now())
}

model ApiKey {
  id         String   @id @default(uuid())
  userId     String
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  keyHash    String
  keyPrefix  String
  name       String?
  isActive   Boolean  @default(true)
  lastUsedAt DateTime?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}
